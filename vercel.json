{
  "version": 2,
  "builds": [
    { "src": "src/server.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "src/server.js" },
    { "src": "/", "dest": "public/student.html" },
    { "src": "/(.*)", "dest": "public/$1" }
  ],
  "env": {
    "VIKA_TOKEN": "@vika_token",
    "DATASHEET_ID": "@datasheet_id",
    "VIEW_ID": "@view_id"
  }
}